<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FightingActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/level_num"
        android:id="@+id/level_num"
        android:textSize="25sp"
        android:gravity="center"
        tools:ignore="MissingConstraints" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginTop="310dp"
            android:layout_marginBottom="0dp"
            android:orientation="vertical"/>

        <TextView
            android:id="@+id/boss_blood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/boss_img"
            android:layout_alignStart="@+id/boss_img"
            android:layout_marginStart="80dp"
            android:layout_marginTop="0dp"
            android:textSize="25sp"
            android:text="1000/1000" />

        <ImageView
            android:id="@+id/boss_img"
            android:layout_width="287dp"
            android:layout_height="332dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            app:srcCompat="@drawable/cat_ax" />

        <ImageView
            android:id="@+id/your_img"
            android:layout_width="202dp"
            android:layout_height="236dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="22dp"
            app:srcCompat="@drawable/cat_ax" />

        <TextView
            android:id="@+id/your_blood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/your_img"
            android:layout_alignParentStart="true"
            android:layout_marginStart="50dp"
            android:layout_marginBottom="-10dp"
            android:textSize="25sp"
            android:text="1000/1000" />

    </RelativeLayout>
</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>